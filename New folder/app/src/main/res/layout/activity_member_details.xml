<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/white">

    <!-- Profile Picture -->
    <ImageView
        android:id="@+id/memberDetailsProfilePic"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_profile"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:scaleType="centerCrop"
        android:layout_marginBottom="10dp"/>

    <!-- Member Name -->
    <TextView
        android:id="@+id/memberDetailsName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="John Doe"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:paddingBottom="10dp"/>

    <!-- Last Seen Timestamp -->
    <TextView
        android:id="@+id/memberDetailsLastSeen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last seen: 10 min ago"
        android:textSize="14sp"
        android:textColor="@color/dark_gray"
        android:layout_gravity="center"
        android:paddingBottom="20dp"/>

    <!-- Location History -->
    <TextView
        android:id="@+id/memberLocationHistoryTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location History"
        android:textSize="16sp"
        android:layout_marginTop="50dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:paddingBottom="10dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/locationHistoryList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"/>

    <!-- Start Tracking Button -->
    <Button
        android:id="@+id/startTrackingBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start Tracking"
        android:layout_marginTop="100dp"
        android:backgroundTint="@color/black"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:padding="10dp"/>
</LinearLayout>
