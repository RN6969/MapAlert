<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/red"
    tools:context=".EmergencyActivity">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/black"
        app:title="Emergency Mode"
        app:titleTextColor="@color/white"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <!-- Emergency Alert Text -->
    <TextView
        android:id="@+id/emergencyAlertText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Emergency Alert Activated!"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"/>

    <!-- Flashlight Icon -->
    <ImageView
        android:id="@+id/emergencyFlashIcon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_flash"
        android:contentDescription="Flashlight"
        android:layout_centerInParent="true"/>

    <!-- Floating Action Button (FAB) -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_emergency"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"/>

    <!-- Cancel Button -->
    <Button
        android:id="@+id/cancelEmergencyBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:backgroundTint="@color/black"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:padding="10dp"
        android:layout_below="@id/emergencyFlashIcon"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"/>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/nav_host_fragment_content_emergency"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:defaultNavHost="true"
        app:navGraph="@navigation/nav_graph_emergency" />


</RelativeLayout>
